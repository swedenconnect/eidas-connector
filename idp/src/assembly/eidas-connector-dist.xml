  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <!-- <baseDirectory>eidas-connector-distribution</baseDirectory>-->
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/shibboleth</directory>
      <includes></includes>
      <outputDirectory>eidas-connector</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/dependency/apache-tomcat-${tomcat.version}</directory>
      <includes></includes>
      <outputDirectory>tomcat</outputDirectory>
    </fileSet>
    <!-- Scripts and documentation -->
  </fileSets>
