<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd"
                           
       default-init-method="initialize"
       default-destroy-method="destroy">
           
  <bean id="eidas.CountrySelectionHandler" class="se.elegnamnden.eidas.idp.connector.controller.CountrySelectionHandler" scope="singleton"
    p:messageSource-ref="messageSource" 
    p:cookieDomain="%{idp.cookie.domain:}">
    <property name="fallbackLanguages">
      <bean parent="shibboleth.CommaDelimStringArray" c:_0="#{'%{idp.ui.fallbackLanguages:}'.trim()}" />
    </property>
  </bean>
  
  <bean id="eidas.SignMessageUiHandler" class="se.elegnamnden.eidas.idp.connector.controller.SignMessageUiHandler" scope="singleton">
    <property name="fallbackLanguages">
      <bean parent="shibboleth.CommaDelimStringArray" c:_0="#{'%{idp.ui.fallbackLanguages:}'.trim()}" />
    </property>  
  </bean>
  
  <util:list id="eidas.uiLanguages">
    <bean class="se.elegnamnden.eidas.idp.connector.controller.model.UiLanguage" p:languageTag="sv" p:altText="Svenska" p:flagUrl="/img/flags/SE.png" />
    <bean class="se.elegnamnden.eidas.idp.connector.controller.model.UiLanguage" p:languageTag="en" p:altText="English" p:flagUrl="/img/flags/UK.png" />
    <!-- <bean class="se.elegnamnden.eidas.idp.connector.controller.model.UiLanguage" p:languageTag="de" p:altText="Deutsch" p:flagUrl="/img/flags/DE.png" /> -->
  </util:list>
  
  <bean id="eidas.UiLanguageHandler" class="se.elegnamnden.eidas.idp.connector.controller.UiLanguageHandler" scope="singleton"
    p:languages-ref="eidas.uiLanguages" />

  <!--
    Abstract base controller for external authentication controllers.
    Path: /idp/extauth 
   -->
  <bean id="sweid.AbstractExternalAuthenticationController" class="se.litsec.shibboleth.idp.authn.controller.sweid.AbstractExternalAuthenticationController"
    abstract="true" 
    p:sessionManager-ref="shibboleth.SessionManager"
    p:signSupportService-ref="eidas.SignSupportService"
    p:attributeToIdMapping-ref="sweid.SAML2AttributeNameToIdMapperService"    
    p:flowName="authn/External" />    
    
  <bean id="eidas.ProxyAuthenticationController" class="se.elegnamnden.eidas.idp.connector.controller.ProxyAuthenticationController" 
    parent="sweid.AbstractExternalAuthenticationController"
    p:authenticatorName="%{idp.authn.external-authn.name}" 
    p:eidasAuthnContextService-ref="eidas.EidasAuthnContextService"
    p:authnRequestGenerator-ref="eidas.AuthnRequestGenerator"
    p:responseProcessor-ref="eidas.ResponseProcessor"
    p:euMetadata-ref="eidas.euMetadata"
    p:attributeProcessingService-ref="eidas.AttributeProcessingService"
    p:countrySelectionHandler-ref="eidas.CountrySelectionHandler"
    p:signMessageUiHandler-ref="eidas.SignMessageUiHandler"
    p:uiLanguageHandler-ref="eidas.UiLanguageHandler" 
    p:verboseStatusMessage="%{idp.errors.verbose:false}" />    
        
</beans>
